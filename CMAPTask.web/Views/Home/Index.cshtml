@{
    Layout = "_Layout";
}
@model IEnumerable<CMAPTask.web.ViewModel.TimesheetViewModel>

<div>   
    @await Html.PartialAsync("_TimesheetCreate")
</div>

<h2>Timesheet</h2>
<br />
<br />
<div id="msgError"></div>

<button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#createModal">New Entry</button>
<a href="/Home/DownloadCsv" class="btn btn-primary btn-sm">Export to CSV</a>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Date</th>
            <th>Project</th>
            <th>Description</th>
            <th>Hours Worked</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.UserName</td>
                    <td>@entry.Date.ToString("dd/MM/yyyy")</td>
                    <td>@entry.Project</td>
                    <td>@entry.Description</td>
                    <td>@entry.HoursWorked</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" style="text-align: center;">No records found</td>
            </tr>
        }
    </tbody>
</table>






